{
    "name": "@emingy/core",
    "version": "0.0.1",
    "description": "Personal UI-kit",
    "author": "Emingy",
    "license": "ISC",
    "type": "module",
    "exports": {
        "./ui": {
            "types": "./lib/ui/index.d.ts",
            "import": "./lib/ui/index.js",
            "require": "./lib/ui/index.js"
        },
        "./hooks": {
            "types": "./lib/hooks/index.d.ts",
            "import": "./lib/hooks/index.js",
            "require": "./lib/hooks/index.js"
        },
        "./styles/*": "./lib/styles/*"
    },
    "scripts": {
        "prepare": "husky",
        "build": "TYPE=lib rslib build",
        "build:storybook": "storybook build",
        "storybook": "storybook dev -p 3000 --no-open",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "lint:scss": "stylelint \"**/*.scss\" --ignore-path .gitignore",
        "lint:scss-fix": "stylelint \"**/*.scss\" --ignore-path .gitignore --fix",
        "format": "prettier --check '**/*.{ts,tsx,js,jsx,json,css,md}'",
        "format:fix": "prettier --write '**/*.{ts,tsx,js,jsx,json,css,md}'",
        "test": "rstest",
        "check-circular-dependency": "dpdm --no-warning --no-tree --transform --exit-code circular:1 src/**/*.ts",
        "precommit": "pnpm test && pnpm knip && pnpm coverage:ts && pnpm check-circular-dependency && pnpm build && pnpx lint-staged",
        "cm": "cz",
        "knip": "knip",
        "coverage:ts": "type-coverage --project=src"
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md}": [
            "prettier --write"
        ],
        "*.{scss,css}": [
            "stylelint --fix"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "20.1.0",
        "@commitlint/config-conventional": "20.0.0",
        "@emingy/configs": "0.1.0",
        "@rsbuild/plugin-react": "1.4.1",
        "@rsbuild/plugin-sass": "1.4.0",
        "@rslib/core": "0.17.0",
        "@rstest/core": "0.6.1",
        "@rstest/coverage-istanbul": "0.0.4",
        "@storybook/addon-docs": "9.1.15",
        "@storybook/addons": "7.6.17",
        "@storybook/blocks": "8.6.14",
        "@storybook/react": "9.1.15",
        "@storybook/theming": "8.6.14",
        "@testing-library/dom": "10.4.1",
        "@testing-library/jest-dom": "6.9.1",
        "@testing-library/react": "16.3.0",
        "@types/react": "19.2.2",
        "@types/react-dom": "19.2.2",
        "dpdm": "3.14.0",
        "husky": "9.1.7",
        "jsdom": "26.1.0",
        "knip": "5.67.1",
        "lint-staged": "16.2.4",
        "plop": "4.0.4",
        "storybook": "9.1.15",
        "storybook-addon-rslib": "2.1.2",
        "storybook-react-rsbuild": "2.1.4",
        "react": "19.2.0",
        "react-dom": "19.2.0",
        "classnames": "2.5.1",
        "type-coverage": "2.29.7"
    },
    "peerDependencies": {
        "react": "19.2.0",
        "react-dom": "19.2.0",
        "classnames": "2.5.1"
    },
    "engines": {
        "node": "22",
        "pnpm": "10"
    },
    "typeCoverage": {
        "atLeast": 95,
        "detail": true
    }
}
