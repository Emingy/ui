{
    "name": "emingy-monorepo",
    "private": true,
    "scripts": {
        "prepare": "husky",
        "preinstall": "pnpm -r --if-present build",
        "build": "pnpm -r --if-present build",
        "build:storybook": "storybook build",
        "build:all": "pnpm build && build:storybook",
        "storybook": "storybook dev -p 3000 --no-open",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "format": "prettier --check 'packages/**/*.{ts,tsx,js,jsx,json,css,md}'",
        "format:fix": "prettier --write 'packages/**/*.{ts,tsx,js,jsx,json,css,md}'",
        "test": "rstest",
        "check-circular-dependency": "pnpm -r --if-present check-circular-dependency",
        "precommit": "pnpm test && pnpm check-circular-dependency && pnpm build && pnpx lint-staged",
        "cm": "cz"
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,css,md}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "@emingy/core": "workspace:^",
        "classnames": "2.5.1",
        "react": "19.2.0",
        "react-dom": "19.2.0"
    },
    "devDependencies": {
        "@emingy/configs": "workspace:^",
        "@rsbuild/plugin-react": "1.4.1",
        "@rsbuild/plugin-sass": "1.4.0",
        "@rslib/core": "0.17.0",
        "@rstest/core": "0.6.1",
        "@storybook/addon-docs": "9.1.15",
        "@storybook/addons": "7.6.17",
        "@storybook/blocks": "8.6.14",
        "@storybook/react": "9.1.15",
        "@storybook/theming": "8.6.14",
        "@testing-library/dom": "10.4.1",
        "@testing-library/jest-dom": "6.9.1",
        "@testing-library/react": "16.3.0",
        "@types/react": "19.2.2",
        "@types/react-dom": "19.2.2",
        "cz-conventional-changelog": "^3.3.0",
        "dpdm": "3.14.0",
        "eslint": "9.37.0",
        "husky": "9.1.7",
        "jsdom": "26.1.0",
        "lint-staged": "16.2.4",
        "plop": "4.0.4",
        "prettier": "3.6.2",
        "storybook": "9.1.15",
        "storybook-addon-rslib": "2.1.2",
        "storybook-react-rsbuild": "2.1.4",
        "typescript": "5.9.3"
    },
    "engines": {
        "node": "22",
        "pnpm": "10"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
